@model IEnumerable<Hotel_Management.Models.Guest>

@{
    ViewBag.Title = "Guests";
}
<h2>Guests</h2>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().First_Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Last_Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().Phone_Number)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.First_Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Last_Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Phone_Number)</td>
            </tr>
        }
    </tbody>
</table>


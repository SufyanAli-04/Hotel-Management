@model Hotel_Management.Models.Room

@{
    ViewBag.Title = "Create";
}



<div class="container1 bg-black">
    <div class="main1 ">

            @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


        <div class="form-horizontal">
            <h2 class="text-decoration-underline ps-3 pt-3">Booking of a Room</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="container ps-4">
            <div class="row g-2">

                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Room_ID, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 pb-3">
                            @Html.EditorFor(model => model.Room_ID, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Room_ID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Room_Type, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 pb-3">
                            @Html.EditorFor(model => model.Room_Type, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Room_Type, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Price_Per_Night, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 pb-3">
                            @Html.EditorFor(model => model.Price_Per_Night, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Price_Per_Night, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Availability, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 pb-3">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.Availability)
                                @Html.ValidationMessageFor(model => model.Availability, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 pb-3">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
                </div>
            
            }
    </div>
</div>

<div class="text-center ">
    @Html.ActionLink("Back to List", "Index", null, new {@class= "btn btn-success text-white mt-3 bg-primary fw-bold" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

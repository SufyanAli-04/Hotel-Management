@model IEnumerable<Hotel_Management.Models.Booking>

@{
    ViewBag.Title = "Index";
}


<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success text-white" })
</p>
<div class="container1">
    <div class="main1">


        <h2 class="text-decoration-underline ps-3 py-3">Records:</h2>
        <table class="table text-white fw-bold text-center">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Check_In_Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Check_Out_Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total_Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Room.Room_Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Guest.First_Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Check_In_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Check_Out_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total_Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room.Room_Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Guest.First_Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Booking_ID }, new { @class = "btn btn-success" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Booking_ID }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Booking_ID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
<div class="text-center">

    <button class=" but1 px-4 mb-5 py-2 fw-bold fs-5 border-0 rounded" onclick="location.href='/Guests'">Previous</button>
    <button class=" but1 px-4 ms-1 mb-5 py-2 fw-bold fs-5 border-0 rounded" onclick="location.href='/Home'">Go to Home</button>

</div>